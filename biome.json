{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "files": {
    "includes": [
      "src/**/*.js",
      "tests/**/*.js",
      "web/src/**/*.{ts,tsx}",
      "!node_modules",
      "!coverage",
      "!logs",
      "!data",
      "!feat-issue-164"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noConsole": "error",
        "noArrayIndexKey": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn"
      },
      "complexity": {
        "useOptionalChain": "warn"
      },
      "correctness": {
        "noConstantCondition": "warn",
        "useExhaustiveDependencies": "warn"
      },
      "a11y": {
        "useSemanticElements": "warn",
        "useAriaPropsSupportedByRole": "warn",
        "noStaticElementInteractions": "warn",
        "useButtonType": "warn"
      }
    }
  },
  "overrides": [],
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  }
}
